# Stage 1: Build stage - To install dependencies
FROM python:3.12-slim-bookworm as builder

# Install system dependencies required for some Python packages
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    pkg-config \
    libpq-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install Poetry
RUN pip install poetry==1.7.1

# Copy only files needed for dependency installation
COPY pyproject.toml poetry.lock ./

# Remove the lock file to force re-resolution from pyproject.toml as it's out of sync
RUN rm poetry.lock

# Configure Poetry to not create a virtual environment
RUN poetry config virtualenvs.create false

# Install all dependencies (main and dev)
RUN poetry install --no-root

# Stage 2: Final image - To run the application
FROM python:3.12-slim-bookworm

# Set the working directory
WORKDIR /app

# Install runtime dependencies for libraries like OpenCV
RUN apt-get update && apt-get install -y --no-install-recommends \
    libxcb1 \
    libgl1-mesa-glx \
    libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# Copy installed packages from the builder's site-packages
COPY --from=builder /usr/local/lib/python3.12/site-packages /usr/local/lib/python3.12/site-packages

# Copy the application code
COPY ./app ./app/
COPY alembic.ini .
COPY .env .

# Run Celery worker
CMD ["python3", "-m", "celery", "-A", "app.core.celery_app", "worker", "-l", "info", "-P", "solo"]
